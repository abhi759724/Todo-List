<!DOCTYPE html>
<html lang="en">

<head>
    <title>
        To Do List
    </title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link href="css/style.css" rel="stylesheet">
</head>

<body>
    <div class="container">
        <h1 class="text-center">TODO App</h1>
    </div>
    <div class="container d-flex justify-content-center flex-row">

        <form action="/todo/createTodo/" method="POST">
            <input type="text" name="description" placeholder="Enter Task" required>
            <input type="select" name="category" placeholder="Select category">
            <input type="date" name="dueDate" placeholder="Enter Due Date" required>
            <button type="submit">Add Task</button>
        </form>

    </div>
    <div class="container d-flex justify-content-center">
        <ul id="list">
            <% for(let i of todo_list){%>
                <li>
                    <p>
                        <%=i.description %>
                    </p>
                    <p>
                        <%=i.category %>
                    </p>
                    <p>
                        <%= i.dueDate %>
                    </p>
                    <!-- <p>
                        <a href="/todo/delete-todo/?id=<%=i._id%>">
                            <i style="color: black;" class="fas fa-trash"></i>
                        </a>
                    </p> -->
                </li>
                <%}%>
        </ul>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
        integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa"
        crossorigin="anonymous"></script>
</body>

</html>