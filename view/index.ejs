    <div class="container">
        <h1 class="text-center">TODO App</h1>
    </div>
    <div class="container inputContainer">

        <form action="/todo/createTodo/" method="POST">
            <div class="container-fluid d-block inputTask m-0 p-0">
                <p>DESCRIPTION</p>
                <div class="input-group input-group-sm mb-3">
                    <input type="text" name="description" placeholder="Enter Task" required class="m-0 enter-task">
                </div>
            </div>
            <div class="container-fluid d-block m-0 p-0">
                <p>CATEGORY</p>
                <div class="input-group input-group-sm mb-3">
                    <input type="text" name="category" class="category" placeholder="Select category">
                </div>

            </div>
            <div class="container-fluid d-block m-0 p-0">
                <p>DUE DATE</p>
                <input type="date" name="dueDate" class="date" placeholder="Enter Due Date" required>
            </div>
            <div class="container-fluid d-flex justify-content-center mt-5">
                <button type="submit" id="addTodo" class="text-bg-success">ADD TODO</button>


            </div>
        </form>


