    <!-- <ul id="list" class="d-inline"> -->
    <div class="container">
        <div class="row tasks">
            <% for(let i of todo_list){%>
                <div class="col-7 my-2 px-1">
                    <div class="row">
                        <p class="d-inline ms-2 p-0">
                            <%= i.description %>
                        </p>
                    </div>
                    <div class="row">
                        <p class="d-inline ms-2 p-0">
